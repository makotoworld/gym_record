<div class="row">
<div class="col-lg-12">
<div class="page-header">
<h1>Records</h1>
</div>
<div class="bs-component">
<table class="table table-striped table-hover">
<thead>
    <tr>
      <th>Place Area</th>
      <th>Route</th>
      <th>Count</th>
      <th>First day</th>
      <th>Kanto day</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td>[<%= record.route.place %>] <%= record.route.area %></td>
        <% if /◎$/ =~ record.count then %>
        <td><span class="label label-primary">O.S.</span> <%= link_to record.route.route_name + '(' + record.route.grade  + ')', record %></td>
        <% elsif /〇$/ =~ record.count then %>
        <td><span class="label label-success">R.P.</span> <%= link_to record.route.route_name + '(' + record.route.grade  + ')', record %></td>
        <% elsif /△$/ =~ record.count then %>
        <td><span class="label label-warning">TO</span> <%= link_to record.route.route_name + '(' + record.route.grade  + ')', record %></td>
        <% else %>
        <td><%= link_to record.route.route_name + '(' + record.route.grade  + ')', record %></td>
        <% end %>
        <td><%= record.count.length %>便</td>
        <td><%= record.first_day %></td>
        <td><%= record.kanto_day %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

<%= link_to 'New Record', new_record_path %>
